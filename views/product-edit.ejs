
<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/product-new.css">
<body>
    
    <div class="container">
        <aside class="sidebar">
            <%- include('./menu.ejs') %>  
        </aside>
        <main role="main" class="main-content">
            <form class="product-form" id="productNewForm" action="/admin/product/edit" method="POST">
                <<div class="header">
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#uploadModal">'Upload image file'%></button>
                    <button id="productUpdate" class="btn btn-success">'Save product' %></button>
                    <h2>Edit product</h2>
                </div>                
                <div class="form-group">
                    <label for="productTitle">"Product title"</label>
                    <input type="text" id="productTitle" class="input-field" minlength="5" maxlength="200"  name="productTitle" value=<%= product.productTitle%> placeholder=<%= product.productTitle%>/>
                </div>
                <div class="form-group row">
                    <div class="form-group-item">
                        <label for="productPrice">"Product price"</label>
                        <div class="input-group">
                            <label class="input-label">$</label>
                            <input type="number" id="productPrice" class="input-field" step="any" name="productPrice" value=<%= product.productPrice%> placeholder=<%= product.productPrice%> required/>
                        </div>
                    </div>
                    <input type="hidden"  name= "product_id" value=<%= product._id%> >
                    
                </div>
                <div class="form-group row">
                    <div class="form-group-item">
                        <label for="productPublished">"Status" </label>
                        <select class="input-field" id="productPublished" name="productPublished">
                            <option value="true" selected>"Published" </option>
                            <option value="false">"Draft" </option>
                        </select>
                    </div>
                   
                    <div class="form-group-item">
                        <label for="productStock">"Stock level" </label>
                        <input type="number" id="productStock" class="input-field" name="productStock"  value=<%= product.productStock%> placeholder=<%= product.productStock%> step="any" />
                    </div>

                </div>
                <div class="form-group">
                    <label for="productDescription">"Product description"</label>
                    <textarea minlength="5" rows="10" id="productDescription" class="input-field" name="productDescription" value=<%= product.productDescription%>  placeholder=<%= product.productDescription%> required></textarea>
                </div>
                 <!-- Modal for URL Image -->
                 <div class="modal" id="urlImageModal">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4>Product image URL</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <input type="text" id="productImageUrl" class="form-control" placeholder="Full Image URL" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="button" id="addImageUrl" class="btn btn-primary">'Add image URL'</button>
                        </div>
                    </div>
                </div>
                <!-- Other modals follow the same structure -->

                <input type="hidden" id="productId" value="<%= product._id %>" />
            </form>
        </main>
    </div>
            
    
    <script>
        $(document).ready(function() {
            $('#productDescription').summernote({
                height: 300,
                minHeight: null
            });
        });
    </script>
</body>


 
