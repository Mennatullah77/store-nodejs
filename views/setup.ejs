<!DOCTYPE html>
<html lang="en">
<%- include('./includes/head.ejs') %> <!-- Ensure the path is correct -->
<body>
    <%- include('./includes/navigation.ejs') %> <!-- Ensure the path is correct -->
    
    <div class="container">
        <form>
            <h2>Admin Setup</h2>
            <div class="form-group">
                <label for="userName">User Name</label>
                <input type="text" id="userName" placeholder="User Name" class="form-control">
            </div>
            <div class="form-group">
                <label for="userEmail">User Email</label>
                <input type="email" id="userEmail" placeholder="Email Address" required class="form-control">
            </div>
            <div class="form-group">
                <label for="userPassword">User Password</label>
                <input type="password" id="userPassword" placeholder="Password" required class="form-control">
            </div>
            <div class="form-group">
                <label for="confirmedPassword">Confirm Password</label>
                <input type="password" id="confirmedPassword" placeholder="Confirm Password" required class="form-control">
            </div>
        </form>
    </div>

    <%- include('./includes/end.ejs') %> <!-- Ensure the path is correct -->
</body>
</html>
